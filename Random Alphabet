#include <iostream>
#include<time.h>
using namespace std;
int main()
{
	char arr[50] = { };
	char max ,max1;
	int k = 0, h = 0;
	srand(time(0));
	while (k < 50)
	{
		arr[k] = rand() % 122;
		if (arr[k] >= 65 && arr[k] <= 90)
		{
			cout << arr[k] << " ";
		}
		else
			continue;
		k++;
	}
	max = max1 = arr[0];
	while(h < 50)
	{
			if (arr[h] > max)
			{
				max1 = max;
				max = arr[h];
			}
			//else
			//if (arr[h] > max1 && arr[h] != max)
				//max1 = arr[h];
			h++;
	}
		
	
	cout << "\n2nd MAX: " << max1 << endl;
	cout << "\nMAX: " << max << endl;
	return 0;
}
