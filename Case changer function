#include<iostream>
using namespace std;
void convertOpposite(char[],int);
int main()
{
	char str[20] = { 't', 'A', 'A', 'h', 'A', '\0' };
	cout << "Original Name: " << str << endl;
	convertOpposite(str,20);
	cout << "Converted Name: " << str << endl;
}
void convertOpposite(char str[],int)
{
	for (int i = 0;str[i]!='\0'; i++)
	{
		if (str[i] >= 'a'&&str[i] <= 'z')
			str[i] = str[i] - 32;
		else if (str[i] >= 'A'&&str[i] <= 'Z')
			str[i] = str[i] + 32;
	}
}
